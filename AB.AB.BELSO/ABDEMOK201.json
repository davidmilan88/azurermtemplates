{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachines_ABDEMOK201_name": {
      "type": "String"
    },
    "networkInterfaces_ABDEMOK201Nic_externalid": {
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-03-01",
      "name": "[parameters('virtualMachines_ABDEMOK201_name')]",
      "location": "westeurope",
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B4ms"
        },
        "storageProfile": {
          "osDisk": {
            "osType": "Windows",
            "name": "[concat(parameters('virtualMachines_ABDEMOK201_name'), '-osdisk')]",
            "createOption": "FromImage",
            "image": {
              "uri": "https://ababbelso.blob.core.windows.net/image/ws2016201801.vhd"
            },
            "vhd": {
              "uri": "[concat('https://ababbelso.blob.core.windows.net/abdemok201/', parameters('virtualMachines_ABDEMOK201_name'), '-osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "diskSizeGB": 120
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachines_ABDEMOK201_name')]",
          "adminUsername": "abesse04",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          },
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('networkInterfaces_ABDEMOK201Nic_externalid')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "https://ababbelso.blob.core.windows.net/"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2019-03-01",
      "name": "[concat(parameters('virtualMachines_ABDEMOK201_name'), '/BGInfo')]",
      "location": "westeurope",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachines_ABDEMOK201_name'))]"
      ],
      "properties": {
        "autoUpgradeMinorVersion": true,
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1"
      }
    }
  ]
}